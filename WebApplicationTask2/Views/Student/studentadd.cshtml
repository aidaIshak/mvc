@model List<student>
<a href="~/Student/insertstudent"><button type="button" class="btn btn-primary btn-lg mt-3"> Add Student</button></a>

<h1> The List Off Student</h1>
<table class="table table-hover">
   
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Address</th>
            <th scope="col">Image</th>
            <th scope="col">Department id</th>
            <th scope="col">More</th>

        </tr>
    </thead>
    <tbody>
       
            @foreach (var s in Model)
            {
            <tr class="table-active">
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.age</td>
                <td>@s.address</td>
                <td class="imgs" ><img src="~/img/@s.imge" /></td>
                <td>@s.department.name</td>
                <td><a href="~/Student/deteals?id=@s.Id"><i class="fa-solid fa-circle-info"></i></a></td>
                
                </tr>
            }
            
           
        
        
    </tbody>
</table>

<style>
    img{
        height:25%;
        width:25%;
    }
    table{
        text-align:center;
        align-content:center;
        align-items:center;
    }
    .imgs{
        width: 200px;
    }
</style>